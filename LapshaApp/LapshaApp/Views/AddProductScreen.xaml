<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="LapshaApp.AddProductScreen"
             xmlns:behaviors="http://xamarin.com/schemas/2020/toolkit"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             NavigationPage.HasNavigationBar="False"
             mc:Ignorable="d">
    
    <!--Сменить фоновую картинку на соответствующую-->
    
    <RelativeLayout BackgroundColor="White">
        <Image Source="SearchScreenBackground.png" 
               Aspect="AspectFill"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Margin="30,250,30,0"/>
        <Grid RowSpacing="0" 
              HorizontalOptions="FillAndExpand" 
              VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid HorizontalOptions="FillAndExpand" 
                  VerticalOptions="FillAndExpand">
                <Image Source="UpBack.png" 
                       Aspect="AspectFill"/>
                <AbsoluteLayout HorizontalOptions="Center" 
                                VerticalOptions="Center">
                    <Label Text="NEW PRODUCT" 
                           TextColor="White" 
                           FontSize="40"/>
                </AbsoluteLayout>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--Верхняя часть карточки создания нового продукта. Включает в себя имя продукта и калории на 100гр, которые расчитываются в зависимости от заданных БЖУ-->

                <pv:PancakeView Grid.Row="0"
                                BackgroundGradientStartPoint="0,0" 
                                BackgroundGradientEndPoint="1,0"
                                CornerRadius="40"
                                VerticalOptions="StartAndExpand"
                                HorizontalOptions="FillAndExpand"
                                Margin="15, 30, 15, 0">
                    <pv:PancakeView.BackgroundGradientStops>
                        <pv:GradientStopCollection>
                            <pv:GradientStop Color="#fda44c" 
                                             Offset="0"/>
                            <pv:GradientStop Color="#fed18e" 
                                             Offset="0.85"/>
                        </pv:GradientStopCollection>
                    </pv:PancakeView.BackgroundGradientStops>
                    <StackLayout 
                                 Margin="5">
                        <pv:PancakeView CornerRadius="45">
                            <Grid BackgroundColor="White">                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                       Text="Name:"
                                       Margin="20,2,0,2"
                                       TextColor="Black"
                                       FontSize="Medium"
                                       VerticalTextAlignment="Center"/>
                                <Entry Grid.Column="1"
                                       Margin="0,2,20,2"
                                       TextColor="Black"/>                                
                            </Grid>
                        </pv:PancakeView>
                    </StackLayout>
                </pv:PancakeView>
                <Label Grid.Row="1"
                       HorizontalOptions="End"
                       Margin="0,0,60,5"
                       TextColor="Black"
                       FontSize="Small">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Callories: "/>
                            <Span Text="---"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <pv:PancakeView Grid.Row="2"
                                BackgroundGradientStartPoint="0,0" 
                                BackgroundGradientEndPoint="1,0"
                                CornerRadius="5"
                                VerticalOptions="Center"
                                HorizontalOptions="FillAndExpand"
                                Margin="20, 0, 20, 0">
                    <pv:PancakeView.BackgroundGradientStops>
                        <pv:GradientStopCollection>
                            <pv:GradientStop Color="#fda44c" 
                                             Offset="0"/>
                            <pv:GradientStop Color="#fed18e" 
                                             Offset="0.85"/>
                        </pv:GradientStopCollection>
                    </pv:PancakeView.BackgroundGradientStops>
                    <Label HeightRequest="5"/>
                </pv:PancakeView>
                
                <!--Поля для внесения БЖУ для нового продукта-->

                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <pv:PancakeView Grid.Row="0"
                                    Grid.Column="0"
                                    BackgroundGradientStartPoint="0,0" 
                                    BackgroundGradientEndPoint="1,0"
                                    CornerRadius="40"
                                    VerticalOptions="CenterAndExpand"
                                    HorizontalOptions="FillAndExpand"
                                    Margin="15, 0, 15, 0">
                        <pv:PancakeView.BackgroundGradientStops>
                            <pv:GradientStopCollection>
                                <pv:GradientStop Color="#fda44c" 
                                             Offset="0"/>
                                <pv:GradientStop Color="#fed18e" 
                                             Offset="0.85"/>
                            </pv:GradientStopCollection>
                        </pv:PancakeView.BackgroundGradientStops>
                        <StackLayout Margin="5">
                            <pv:PancakeView CornerRadius="45">
                                <Grid BackgroundColor="White">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0"
                                       Text="Prot:"
                                       Margin="20,2,0,2"
                                       TextColor="Black"
                                       FontSize="Medium"
                                       VerticalTextAlignment="Center"/>
                                    <Entry Grid.Column="1"
                                       Margin="0,2,10,2"
                                       TextColor="Black"/>
                                </Grid>
                            </pv:PancakeView>
                        </StackLayout>
                    </pv:PancakeView>
                    <pv:PancakeView Grid.Row="1"
                                    Grid.Column="0"
                                    BackgroundGradientStartPoint="0,0" 
                                    BackgroundGradientEndPoint="1,0"
                                    CornerRadius="40"
                                    VerticalOptions="CenterAndExpand"
                                    HorizontalOptions="FillAndExpand"
                                    Margin="15, 0, 15, 0">
                        <pv:PancakeView.BackgroundGradientStops>
                            <pv:GradientStopCollection>
                                <pv:GradientStop Color="#fda44c" 
                                             Offset="0"/>
                                <pv:GradientStop Color="#fed18e" 
                                             Offset="0.85"/>
                            </pv:GradientStopCollection>
                        </pv:PancakeView.BackgroundGradientStops>
                        <StackLayout Margin="5">
                            <pv:PancakeView CornerRadius="45">
                                <Grid BackgroundColor="White">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0"
                                       Text="Fat:"
                                       Margin="20,2,0,2"
                                       TextColor="Black"
                                       FontSize="Medium"
                                       VerticalTextAlignment="Center"/>
                                    <Entry Grid.Column="1"
                                       Margin="0,2,10,2"
                                       TextColor="Black"/>
                                </Grid>
                            </pv:PancakeView>
                        </StackLayout>
                    </pv:PancakeView>
                    <pv:PancakeView Grid.Row="2"
                                    Grid.Column="0"
                                    BackgroundGradientStartPoint="0,0" 
                                    BackgroundGradientEndPoint="1,0"
                                    CornerRadius="40"
                                    VerticalOptions="CenterAndExpand"
                                    HorizontalOptions="FillAndExpand"
                                    Margin="15, 0, 15, 0">
                        <pv:PancakeView.BackgroundGradientStops>
                            <pv:GradientStopCollection>
                                <pv:GradientStop Color="#fda44c" 
                                             Offset="0"/>
                                <pv:GradientStop Color="#fed18e" 
                                             Offset="0.85"/>
                            </pv:GradientStopCollection>
                        </pv:PancakeView.BackgroundGradientStops>
                        <StackLayout Margin="5">
                            <pv:PancakeView CornerRadius="45">
                                <Grid BackgroundColor="White">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0"
                                       Text="Carb:"
                                       Margin="20,2,0,2"
                                       TextColor="Black"
                                       FontSize="Medium"
                                       VerticalTextAlignment="Center"/>
                                    <Entry Grid.Column="1"
                                       Margin="0,2,10,2"
                                       TextColor="Black"/>
                                </Grid>
                            </pv:PancakeView>
                        </StackLayout>
                    </pv:PancakeView>                    
                </Grid>
                <pv:PancakeView Grid.Row="4"
                                BackgroundGradientStartPoint="0,0" 
                                BackgroundGradientEndPoint="1,0"
                                CornerRadius="5"
                                VerticalOptions="Center"
                                HorizontalOptions="FillAndExpand"
                                Margin="20, 0, 20, 0">
                    <pv:PancakeView.BackgroundGradientStops>
                        <pv:GradientStopCollection>
                            <pv:GradientStop Color="#fda44c" 
                                             Offset="0"/>
                            <pv:GradientStop Color="#fed18e" 
                                             Offset="0.85"/>
                        </pv:GradientStopCollection>
                    </pv:PancakeView.BackgroundGradientStops>
                    <Label HeightRequest="5"/>
                </pv:PancakeView>

                <!--Нижняя часть экрана. Кнопка сохранения продукта-->

                <pv:PancakeView Grid.Row="5"
                                BackgroundGradientStartPoint="0,0" 
                                BackgroundGradientEndPoint="1,0"
                                CornerRadius="40"
                                HorizontalOptions="Center"
                                VerticalOptions="End"
                                Margin="100, 10, 100, 10">
                    <pv:PancakeView.BackgroundGradientStops>
                        <pv:GradientStopCollection>
                            <pv:GradientStop Color="#fda44c" 
                                             Offset="0"/>
                            <pv:GradientStop Color="#fed18e" 
                                             Offset="0.85"/>
                        </pv:GradientStopCollection>
                    </pv:PancakeView.BackgroundGradientStops>
                    <Button x:Name="AddMealImageButton"
                            BackgroundColor="Transparent"
                            Text="SAVE"
                            TextColor="White"
                            FontSize="Large"
                            FontAttributes="Bold"
                            Clicked="SaveNewProduct"
                            WidthRequest="200"
                            HeightRequest="70">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="Scale"
                                                Value="1" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="Scale"
                                                Value="0.9" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Button>
                </pv:PancakeView>                
            </Grid>
        </Grid>
    </RelativeLayout>
</ContentPage>